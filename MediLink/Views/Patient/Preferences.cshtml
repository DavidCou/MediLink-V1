@model PreferencesViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Preferences";
}

@if(ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<h1>Preferences</h1>

<form asp-controller="Patient" asp-action="Preferences" method="post">
    <div class="mb-3 row">
        <label for="preferencesCity" class="col-auto col-form-label">City: </label>
        <div class="sm-col-6">
            <input type="text" id="preferencesCity" class="form-control" asp-for="preferences.location" />
        </div>
    </div>
    <div class ="mb-3 row">
        <label class="col-auto form-label">Rating: </label>
        <select asp-for="preferences.rating" >
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="mb-3 row">
        <label asp-for="selectedLanguageIds" class="col-auto form-label">Spoken Languages: </label>
        <div class="col-sm-6">
            <select asp-for="selectedLanguageIds" asp-items="Model.languages" multiple >
            </select>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="selectedOfficeTypeIds" class="col-auto form-label">Preferred Office Types: </label>
        <div class="col-sm-6">
            <select asp-for="selectedOfficeTypeIds" asp-items="Model.officeTypes" multiple >
            </select>
        </div>
    </div>

    <div hidden>
        <select asp-for="previousLanguages" asp-items="Model.languages"></select>
        <select asp-for="previousOfficeTypes" asp-items="Model.officeTypes"></select>
    </div>

    <input type="hidden" asp-for="preferences.Id" />

    <input type="submit" value="Save" />
</form>